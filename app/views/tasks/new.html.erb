<h1>タスクの作成</h1>

<%= form_with(model: @task,local: true) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "タスク名" %>
    <%= f.text_field :title,  class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content, "詳細" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :deadline, "終了期限" %>
    <%= f.date_field :deadline %>
  </div>
  <div class="form-group">
    <%= f.label :status, "状態検索" %>
    <%= f.select :status, [["未着手","未着手"],["着手中","着手中"],["完了","完了"]] %>
  </div>
  <div class="form-group">
    <%= f.label :priority, "優先順位" %>
    <%= f.select :priority, Task.priorities_i18n.keys.map {|k| [Task.priorities_i18n[k], k]} %>
  </div>

    <%#= f.label :content , "ラベル名" %>
      <% Label.all.each do |label| %>
    <!-- checked: label[:checked], disabled: label[:disabled]の記述でチェックがついたときに（label[:id]）に入っている値を送信できるようになります-->
      <%= f.check_box :label_ids, {multiple: true, checked: label[:checked], disabled: label[:disabled], include_hidden: false},label[:id] %>
      <%= label.content %>
    <% end %> 

   <div class="form-group">
    <%= f.label :image, "添付画像" %>
    <%= f.file_field :image %>  
   </div>
 
  <div class="form-group">
    <%= f.submit "作成する" %>
  </div>
  <div class="form-group">
    <%= link_to "戻る", tasks_path %>
  </div>
<% end %>