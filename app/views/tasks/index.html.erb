<h1>タスク一覧</h1>
  <%= search_form_for @q do |f| %>
    <%= f.label :title_cont, "タスク名検索" %>
    <%= f.search_field :title_cont %>
    <%= f.label :status_cont, "状態検索" %>
    <%= f.select :status_cont, @statues, include_blank: true %>
    <%= f.label :priority_eq, "優先順位" %>
    <%= f.select :priority_eq, @priorities, include_blank: true %>
    <%= f.submit "検索" %>
  <% end %>

<table class="table">
  <thead>
    <tr>
      <th>タスク名</th>
      <th>詳細</th>
      <th>終了期限</th>
      <th>状態</th>
      <th>優先順位</th>
    </tr>
  </thead>
  <tbody>

    <% @tasks.each do |task| %>
      <tr>
        <td class="task_title"><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline.strftime("%Y年%m月%d日")%></td>
        <td><%= task.status %></td>
        <td><%= task.priority_i18n %>
        <td class="task_show"><%= link_to "詳細", task %></td>
        <td><%= link_to "編集", edit_task_path(task) %></td>
        <td><%= link_to "削除", task, method: :delete, data: {confirm: "削除して宜しいですか？"} %></td>
      </tr>
    <% end %>
    <tr>
    </tr>
  </tbody>
</table>
 <%= paginate @tasks %>
&nbsp
<div>
  <%= link_to "タスクを作成する", new_task_path, class: "new_task" %>
</div>
&nbsp
<div>
  <%= link_to "終了期限でソートする(期限が近い順に)", tasks_path(sort_expired: "true") %>
</div>
&nbsp
<div>
  <%= link_to "優先順位でソートする(高い順に)", tasks_path(sort_priority_expired: "true") %>
</div>



