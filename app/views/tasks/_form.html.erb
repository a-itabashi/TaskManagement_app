<%= form_with(model: @task,local: true) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= f.label :title, "タスク名" %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content, "詳細" %>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.submit "作成する" %>
  </div>
  <div>
    <%= link_to "戻る", root_path %>
  </div>
<% end %>